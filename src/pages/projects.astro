---
import { ArrowUpRight, Github } from "lucide-react";
import { projectsData } from "../data/projects";
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
---

<Layout
    title="Projects | Abhishekh Ojha"
    description="Explore the complete portfolio of Abhishekh Ojha. A showcase of projects in web development, AI automation, full-stack architectures, and responsive design."
    keywords="Projects, Portfolio, Abhishekh Ojha, Web Development, React, Next.js, AI Automation, MERN Stack, Software Engineering"
    url="https://abhishekhojha.com/projects"
>
    <main class="pt-24 sm:pt-28 md:pt-36">
        <section class="container mx-auto px-4 sm:px-6">
            {/* Hero Header */}
            <div class="mb-14 sm:mb-20 md:mb-28">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-20 items-center">
                    {/* Left: Title block */}
                    <div>
                        <div class="flex items-center gap-3 mb-5 sm:mb-8">
                            <div class="w-6 sm:w-8 h-px bg-gray-900"></div>
                            <p class="text-xs sm:text-sm font-medium uppercase tracking-[0.2em] text-gray-400">Portfolio</p>
                        </div>
                        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 tracking-tight leading-[1.05]">
                            All Projects
                        </h1>
                    </div>

                    {/* Right: Description + stats */}
                    <div class="flex flex-col gap-6 sm:gap-8 lg:pb-1">
                        <p class="text-base sm:text-lg text-gray-500 leading-relaxed">
                            A curated archive spanning web development,
                            AI automation, and full-stack engineering â€” each project
                            built with purpose and attention to craft.
                        </p>
                        <div class="grid grid-cols-3 gap-2 sm:gap-4">
                            <div class="bg-gray-50 rounded-lg sm:rounded-xl px-3 sm:px-4 py-4 sm:py-5 text-center">
                                <p class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900">{projectsData.length}</p>
                                <p class="text-[10px] sm:text-[11px] uppercase tracking-wider text-gray-400 mt-1">Projects</p>
                            </div>
                            <div class="bg-gray-50 rounded-lg sm:rounded-xl px-3 sm:px-4 py-4 sm:py-5 text-center">
                                <p class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900">{[...new Set(projectsData.flatMap(p => p.skills))].length}</p>
                                <p class="text-[10px] sm:text-[11px] uppercase tracking-wider text-gray-400 mt-1">Technologies</p>
                            </div>
                            <div class="bg-gray-50 rounded-lg sm:rounded-xl px-3 sm:px-4 py-4 sm:py-5 text-center">
                                <p class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900">{projectsData.filter(p => p.demoUrl).length}</p>
                                <p class="text-[10px] sm:text-[11px] uppercase tracking-wider text-gray-400 mt-1">Live Sites</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex flex-col">
                {
                    projectsData.map((project, index) => (
                        <a
                            href={project.demoUrl || project.githubUrl || undefined}
                            target={project.demoUrl || project.githubUrl ? "_blank" : undefined}
                            rel={project.demoUrl || project.githubUrl ? "noopener noreferrer" : undefined}
                            class:list={[
                                "group block border-t border-gray-200 py-6 sm:py-8 md:py-10 transition-all duration-300",
                                (project.demoUrl || project.githubUrl) && "cursor-pointer",
                            ]}
                        >
                            <div class="flex flex-col sm:grid sm:grid-cols-12 gap-4 sm:gap-6 md:gap-8 sm:items-center">
                                {/* Number + Title */}
                                <div class="sm:col-span-5 flex items-start gap-3 sm:gap-4 md:gap-6">
                                    <span class="text-xs sm:text-sm font-medium text-gray-300 tabular-nums mt-1 sm:mt-1.5 select-none shrink-0">
                                        {String(index + 1).padStart(2, "0")}
                                    </span>
                                    <div class="min-w-0">
                                        <h3 class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900 group-hover:text-[var(--brand-dark)] transition-colors duration-300 leading-snug">
                                            {project.title}
                                        </h3>
                                        <div class="flex flex-wrap gap-1 sm:gap-1.5 mt-2 sm:mt-3">
                                            {project.skills.map((skill) => (
                                                <span class="px-2 sm:px-2.5 py-0.5 bg-gray-100 text-gray-500 text-[10px] sm:text-[11px] font-medium rounded-full uppercase tracking-wider group-hover:bg-gray-900 group-hover:text-white transition-colors duration-300">
                                                    {skill}
                                                </span>
                                            ))}
                                        </div>
                                    </div>
                                </div>

                                {/* Description */}
                                <div class="sm:col-span-5 pl-7 sm:pl-0">
                                    <p class="text-sm sm:text-base text-gray-500 leading-relaxed line-clamp-2 sm:line-clamp-3">
                                        {project.description}
                                    </p>
                                </div>

                                {/* Links */}
                                <div class="sm:col-span-2 pl-7 sm:pl-0 flex items-center justify-start sm:justify-end gap-3">
                                    {project.demoUrl && (
                                        <span
                                            class="inline-flex items-center gap-1.5 text-sm font-semibold text-gray-400 group-hover:text-gray-900 transition-colors duration-300"
                                        >
                                            <span class="inline sm:hidden md:inline">Visit</span>
                                            <ArrowUpRight
                                                client:load
                                                size={16}
                                                className="transform group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform duration-300"
                                            />
                                        </span>
                                    )}
                                    {project.githubUrl && (
                                        <span
                                            class="inline-flex items-center text-gray-300 group-hover:text-gray-900 transition-colors duration-300"
                                        >
                                            <Github
                                                client:load
                                                size={16}
                                            />
                                        </span>
                                    )}
                                    {!project.demoUrl && !project.githubUrl && (
                                        <span class="text-xs text-gray-300 italic">Internal</span>
                                    )}
                                </div>
                            </div>
                        </a>
                    ))
                }
                <div class="border-t border-gray-200"></div>
            </div>
        </section>
        <Contact />
    </main>
</Layout>
