---
export const prerender = true;
import { usesData } from '../data/uses';
import Layout from '../layouts/Layout.astro';
import Contact from '../components/Contact.astro';
---

<Layout
  title="Uses | Abhishekh Ojha"
  description="The tools, apps, hardware, and services I use daily as a full-stack developer and AI engineer."
  url="https://abhishekhojha.com/uses"
>
  <main class="pt-24 sm:pt-28 md:pt-36">
    <section class="container mx-auto px-4 sm:px-6 pb-16 md:pb-24">

      {/* Header */}
      <div class="mb-14 sm:mb-20">
        <div class="flex items-center gap-3 mb-5 sm:mb-8">
          <div class="w-6 sm:w-8 h-px bg-gray-900 dark:bg-gray-400"></div>
          <p class="text-xs sm:text-sm font-medium uppercase tracking-[0.2em] text-gray-400 dark:text-gray-500">Setup</p>
        </div>
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-gray-100 tracking-tight leading-[1.05] mb-4">
          Uses
        </h1>
        <p class="text-lg text-gray-500 dark:text-gray-400 max-w-xl leading-relaxed">
          The tools and technology I reach for every day â€” hardware, software, and everything in between.
        </p>
      </div>

      {/* Categories */}
      <div class="space-y-16">
        {usesData.map((section) => (
          <div data-animate="fade-up">
            <h2 class="text-xs sm:text-sm font-semibold uppercase tracking-[0.2em] text-gray-400 dark:text-gray-500 mb-6 flex items-center gap-2">
              <span>{section.icon}</span>
              <span>{section.category}</span>
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
              {section.items.map((item) => (
                <div class="group p-5 bg-white dark:bg-gray-900/50 rounded-2xl border border-gray-100 dark:border-gray-800 hover:border-gray-300 dark:hover:border-gray-600 transition-all duration-300">
                  <div class="flex items-start justify-between gap-2 mb-2">
                    <p class="text-sm font-semibold text-gray-900 dark:text-gray-100">{item.name}</p>
                    {item.url && (
                      <a
                        href={item.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-300 dark:text-gray-700 hover:text-gray-700 dark:hover:text-gray-300 transition-colors shrink-0"
                        aria-label={`Visit ${item.name}`}
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
                      </a>
                    )}
                  </div>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">{item.description}</p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

    </section>
    <Contact />
  </main>
</Layout>
