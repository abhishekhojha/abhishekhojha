---
import Layout from '../../layouts/Layout.astro';
import { renderToHtml } from '../../lib/tiptap';
import type { BlogPost } from '../../lib/types';
import Contact from '../../components/Contact.astro';

export const prerender = false;

const { slug } = Astro.params;

const res = await fetch(new URL(`/api/posts/${slug}`, Astro.url.origin).toString());
if (!res.ok) return Astro.redirect('/404');

const post: BlogPost = await res.json();
const contentHtml = post.content ? renderToHtml(post.content) : '';

function formatDate(date: string | Date) {
  return new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
}

const allCategories = [post.category, ...(post.extraCategories ?? [])].filter(Boolean);
---

<Layout
  title={`${post.title} | Abhishekh Ojha`}
  description={post.description}
  url={`https://abhishekhojha.com/blog/${slug}`}
  image={post.coverImage}
>
  <main class="pt-24 sm:pt-28 md:pt-36">

    {post.coverImage && (
      <div class="w-full max-h-[520px] overflow-hidden mb-0">
        <img
          src={post.coverImage}
          alt={post.title}
          class="w-full h-[520px] object-cover"
          loading="eager"
        />
      </div>
    )}

    <div class="container mx-auto px-4 sm:px-6 max-w-3xl">

      <a
        href="/blog"
        class="inline-flex items-center gap-1.5 text-xs font-semibold uppercase tracking-widest text-gray-400 dark:text-gray-500 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200 mt-4 mb-8"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
        All articles
      </a>

      <header class="mb-12">
        <div class="flex flex-wrap gap-1.5 mb-6">
          {allCategories.map((cat: string) => (
            <a
              href={`/blog?category=${cat}`}
              class="px-3 py-1 bg-gray-900 dark:bg-white text-white dark:text-gray-900 text-[10px] font-bold rounded-full uppercase tracking-widest hover:opacity-75 transition-opacity"
            >
              {cat.replace(/-/g, ' ')}
            </a>
          ))}
          {(post.tags ?? []).map((tag: string) => (
            <span class="px-3 py-1 border border-gray-200 dark:border-gray-700 text-gray-500 dark:text-gray-400 text-[10px] font-semibold rounded-full uppercase tracking-widest">
              {tag}
            </span>
          ))}
        </div>

        <h1 class="text-3xl sm:text-4xl md:text-[2.75rem] font-bold text-gray-900 dark:text-gray-50 tracking-tight leading-[1.1] mb-5">
          {post.title}
        </h1>

        <p class="text-lg sm:text-xl text-gray-500 dark:text-gray-400 leading-relaxed mb-8 font-normal">
          {post.description}
        </p>

        <div class="flex items-center gap-4 pb-10 border-b border-gray-200 dark:border-gray-800">
          <div class="w-9 h-9 rounded-full bg-gray-900 dark:bg-white flex items-center justify-center flex-shrink-0">
            <span class="text-white dark:text-gray-900 text-xs font-bold">AO</span>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-800 dark:text-gray-200 leading-none mb-1">Abhishekh Ojha</p>
            <div class="flex items-center gap-2 text-xs text-gray-400 dark:text-gray-500">
              <span>{formatDate(post.pubDate)}</span>
              {post.readingTime && (
                <>
                  <span class="w-1 h-1 rounded-full bg-gray-300 dark:bg-gray-600 inline-block"></span>
                  <span>{post.readingTime}</span>
                </>
              )}
            </div>
          </div>
        </div>
      </header>

      <div class="blog-content" set:html={contentHtml} />

      <div class="mt-20 pb-8 pt-8 border-t border-gray-200 dark:border-gray-800 flex items-center justify-between">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
          All articles
        </a>
        <div class="flex items-center gap-2">
          <button
            id="copy-link"
            aria-label="Copy link"
            title="Copy link"
            class="inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-200 dark:border-gray-700 text-gray-500 dark:text-gray-400 hover:border-gray-900 dark:hover:border-gray-400 hover:text-gray-900 dark:hover:text-white transition-all duration-200"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
          </button>
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`https://abhishekhojha.com/blog/${slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Share on X"
            title="Share on X"
            class="inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-200 dark:border-gray-700 text-gray-500 dark:text-gray-400 hover:border-gray-900 dark:hover:border-gray-400 hover:text-gray-900 dark:hover:text-white transition-all duration-200"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://abhishekhojha.com/blog/${slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Share on LinkedIn"
            title="Share on LinkedIn"
            class="inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-200 dark:border-gray-700 text-gray-500 dark:text-gray-400 hover:border-gray-900 dark:hover:border-gray-400 hover:text-gray-900 dark:hover:text-white transition-all duration-200"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
      <Contact />
    </div>
  </main>
</Layout>

<script>
  document.addEventListener('astro:page-load', () => {
    const btn = document.getElementById('copy-link');
    if (!btn) return;
    btn.addEventListener('click', async () => {
      await navigator.clipboard.writeText(window.location.href);
      const orig = btn.innerHTML;
      btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>`;
      setTimeout(() => { btn.innerHTML = orig; }, 1800);
    });
  });
</script>

<style is:global>
  .blog-content {
    color: #374151;
    font-size: 1.0625rem;
    line-height: 1.85;
    font-family: 'Poppins', sans-serif;
  }
  .dark .blog-content { color: #d1d5db; }
  .blog-content h1, .blog-content h2, .blog-content h3,
  .blog-content h4, .blog-content h5, .blog-content h6 {
    font-weight: 700;
    letter-spacing: -0.025em;
    line-height: 1.2;
    color: #111827;
    margin-top: 2.5rem;
    margin-bottom: 0.875rem;
  }
  .dark .blog-content h1, .dark .blog-content h2, .dark .blog-content h3,
  .dark .blog-content h4, .dark .blog-content h5, .dark .blog-content h6 { color: #f9fafb; }
  .blog-content h1 { font-size: 2rem; }
  .blog-content h2 { font-size: 1.5rem; margin-top: 3rem; }
  .blog-content h3 { font-size: 1.25rem; margin-top: 2.25rem; }
  .blog-content h4 { font-size: 1.1rem; }
  .blog-content p { margin-bottom: 1.5rem; }
  .blog-content a { color: #111827; text-decoration: underline; text-underline-offset: 3px; text-decoration-color: #9ca3af; transition: text-decoration-color 0.2s; }
  .dark .blog-content a { color: #f3f4f6; text-decoration-color: #4b5563; }
  .blog-content a:hover { text-decoration-color: currentColor; }
  .blog-content strong { color: #111827; font-weight: 700; }
  .dark .blog-content strong { color: #f9fafb; }
  .blog-content em { font-style: italic; }
  .blog-content code {
    background: #f3f4f6;
    color: #1f2937;
    font-size: 0.85em;
    font-family: ui-monospace, SFMono-Regular, Menlo, monospace;
    padding: 0.15em 0.45em;
    border-radius: 0.3rem;
    border: 1px solid #e5e7eb;
  }
  .dark .blog-content code { background: #1f2937; color: #e5e7eb; border-color: #374151; }
  .blog-content pre {
    background: #0f172a;
    color: #e2e8f0;
    padding: 1.5rem;
    border-radius: 0.875rem;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid #1e293b;
    font-size: 0.875rem;
    line-height: 1.7;
  }
  .dark .blog-content pre { background: #0a0a0a; border-color: #1a1a1a; }
  .blog-content pre code { background: transparent; color: inherit; padding: 0; border: none; font-size: inherit; border-radius: 0; }
  .blog-content blockquote {
    border-left: 3px solid #e5e7eb;
    padding: 0.5rem 0 0.5rem 1.5rem;
    margin: 2rem 0;
    color: #6b7280;
    font-style: italic;
  }
  .dark .blog-content blockquote { border-left-color: #374151; color: #9ca3af; }
  .blog-content ul { list-style: disc; padding-left: 1.5rem; margin-bottom: 1.5rem; }
  .blog-content ol { list-style: decimal; padding-left: 1.5rem; margin-bottom: 1.5rem; }
  .blog-content li { margin-bottom: 0.4rem; color: #4b5563; }
  .dark .blog-content li { color: #d1d5db; }
  .blog-content img { width: 100%; height: auto; border-radius: 0.875rem; margin: 2rem 0; border: 1px solid #e5e7eb; }
  .dark .blog-content img { border-color: #1f2937; }
  .blog-content hr { border: none; border-top: 1px solid #e5e7eb; margin: 3rem 0; }
  .dark .blog-content hr { border-top-color: #1f2937; }
  .blog-content table { width: 100%; border-collapse: collapse; margin: 2rem 0; font-size: 0.9rem; }
  .blog-content th { background: #f9fafb; font-weight: 600; text-align: left; padding: 0.625rem 1rem; border-bottom: 2px solid #e5e7eb; color: #111827; }
  .dark .blog-content th { background: #111827; border-bottom-color: #374151; color: #f9fafb; }
  .blog-content td { padding: 0.625rem 1rem; border-bottom: 1px solid #f3f4f6; vertical-align: top; }
  .dark .blog-content td { border-bottom-color: #1f2937; }
  .blog-content tr:last-child td { border-bottom: none; }
  .blog-content mark { background: #fef9c3; padding: 0.05em 0.25em; border-radius: 0.2rem; }
  .dark .blog-content mark { background: #713f12; color: #fef3c7; }
</style>
