---
import { Download } from "lucide-react";
// src/layouts/menu.astro
---

<div
  class="fixed w-full top-0 z-50 px-3 sm:px-4 py-4 md:py-6 pointer-events-none"
>
  <div class="container mx-auto flex justify-between items-center">
    {/* Main Navigation - Ultra-sleek Floating Glass Pill */}
    <nav
      class="pointer-events-auto flex items-center gap-1 sm:gap-4 rounded-full px-2 sm:px-3 py-1.5 sm:py-2 bg-white/60 backdrop-blur-xl border border-white/40 shadow-[0_8px_32px_rgba(0,0,0,0.04)] ring-1 ring-gray-900/5 transition-all duration-500 hover:bg-white/80 hover:shadow-[0_8px_32px_rgba(0,0,0,0.08)]"
    >
      <a
        href="#about"
        class="relative px-2 sm:px-4 py-1.5 text-xs sm:text-sm font-semibold text-gray-600 rounded-full transition-all duration-300 hover:text-gray-900 hover:bg-gray-900/5 whitespace-nowrap"
      >
        About
      </a>
      <a
        href="#projects"
        class="relative px-2 sm:px-4 py-1.5 text-xs sm:text-sm font-semibold text-gray-600 rounded-full transition-all duration-300 hover:text-gray-900 hover:bg-gray-900/5 whitespace-nowrap"
      >
        Projects
      </a>
      <a
        href="#contact"
        class="relative px-2 sm:px-4 py-1.5 text-xs sm:text-sm font-semibold text-gray-600 rounded-full transition-all duration-300 hover:text-gray-900 hover:bg-gray-900/5 whitespace-nowrap"
      >
        Contact
      </a>
    </nav>

    {/* Right CTA */}
    <div class="pointer-events-auto">
      <a
        href="/ABHISHEKH_OJHA.pdf"
        download="ABHISHEKH_OJHA.pdf"
        class="group relative inline-flex items-center justify-center px-4 sm:px-7 py-2 sm:py-2.5 font-bold text-white transition-all duration-300 bg-gray-900 rounded-full overflow-hidden shadow-lg hover:shadow-xl hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 leading-none h-9 sm:h-10 w-9 sm:w-auto"
      >
        <span
          class="absolute inset-0 w-full h-full -mt-1 rounded-lg opacity-30 bg-gradient-to-b from-transparent via-transparent to-black transition-opacity group-hover:opacity-0"
        ></span>
        <div class="relative flex items-center justify-center">
          <Download client:load size={16} className="sm:hidden" />
          <span class="hidden sm:inline tracking-wide text-sm">Resume</span>
        </div>
      </a>
    </div>
  </div>
</div>
