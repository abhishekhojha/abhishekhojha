---
import { experienceData } from "../data/experience";
---

<section id="experience" class="bg-gray-50 dark:bg-[#141414] py-16 md:py-24">
  <div class="container mx-auto px-4 sm:px-6">
    {/* Header */}
    <div data-animate="fade-up" class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-20 items-end mb-14 sm:mb-20 md:mb-24">
      <div>
        <div class="flex items-center gap-3 mb-5 sm:mb-8">
          <div class="w-6 sm:w-8 h-px bg-gray-900"></div>
          <p class="text-xs sm:text-sm font-medium uppercase tracking-[0.2em] text-gray-400 dark:text-gray-500">Experience</p>
        </div>
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-gray-100 tracking-tight leading-[1.05]">
          Professional Journey
        </h2>
      </div>
      <div class="lg:pb-1">
        <p class="text-base sm:text-lg text-gray-500 dark:text-gray-400 leading-relaxed max-w-md">
          A timeline of roles where I've built products, solved real problems,
          and grown as an engineer across startups and freelance work.
        </p>
      </div>
    </div>

    {/* Timeline */}
    <div class="flex flex-col">
      {experienceData.map((exp) => (
        <div class="group border-t border-gray-200 dark:border-gray-700/50 py-8 sm:py-10 md:py-14 transition-all duration-300">
          <div class="flex flex-col sm:grid sm:grid-cols-12 gap-5 sm:gap-6 md:gap-10 sm:items-start">
            {/* Left: Number + Role info */}
            <div class="sm:col-span-4 flex items-start gap-3 sm:gap-5">
              <span class="text-xs sm:text-sm font-medium text-gray-300 tabular-nums mt-1 sm:mt-1.5 select-none shrink-0">
                {String(exp.index).padStart(2, "0")}
              </span>
              <div class="min-w-0">
                <div class="flex items-center gap-2 flex-wrap">
                  <h3 class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900 dark:text-gray-100 group-hover:text-[var(--brand-dark)] dark:group-hover:text-gray-300 transition-colors duration-300 leading-snug">
                    {exp.role}
                  </h3>
                  {exp.current && (
                    <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-green-50 text-green-600 text-[10px] sm:text-[11px] font-semibold rounded-full uppercase tracking-wider border border-green-100">
                      <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
                      Current
                    </span>
                  )}
                </div>
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mt-1">{exp.company}</p>
                <p class="text-xs font-medium tracking-wider text-gray-400 dark:text-gray-500 uppercase mt-2">{exp.period}</p>
              </div>
            </div>

            {/* Right: Bullet points */}
            <div class="sm:col-span-8 pl-7 sm:pl-0">
              <ul class="space-y-3 sm:space-y-4">
                {exp.points.map((point) => (
                  <li class="flex items-start gap-3 sm:gap-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-300 dark:text-gray-600 flex-shrink-0 mt-0.5 group-hover:text-[var(--brand-dark)] dark:group-hover:text-gray-400 transition-colors duration-300"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm sm:text-base text-gray-500 dark:text-gray-400 leading-relaxed">
                      {point}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
      <div class="border-t border-gray-200 dark:border-gray-700/50"></div>
    </div>
  </div>
</section>
