<section
  id="about"
  class="container mx-auto px-4 sm:px-6 py-16 md:py-24 border-t border-gray-100 dark:border-gray-800"
>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-20 items-center">
    {/* Left: headline */}
    <div data-animate="slide-in-left">
      <div class="flex items-center gap-3 mb-5 sm:mb-8">
        <div class="w-6 sm:w-8 h-px bg-gray-900"></div>
        <p class="text-xs sm:text-sm font-medium uppercase tracking-[0.2em] text-gray-400 dark:text-gray-500">About</p>
      </div>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-gray-100 tracking-tight leading-[1.05]">
        Building things<br />
        <span class="text-gray-300 dark:text-gray-600">that matter.</span>
      </h2>
    </div>

    {/* Right: description + quick facts */}
    <div data-animate="slide-in-right" class="flex flex-col gap-6">
      <p class="text-base sm:text-lg text-gray-500 dark:text-gray-400 leading-relaxed">
        I'm a Software Engineer focused on building scalable, responsive web
        applications and AI-driven automation workflows. I care about clean code,
        thoughtful UI, and shipping products that solve real problems.
      </p>
      <div class="grid grid-cols-2 gap-3">
        <div class="flex items-start gap-3 bg-gray-50 dark:bg-gray-800/50 rounded-xl p-4">
