---
import { Image } from 'astro:assets';
---

<div
  class="bg-white dark:bg-gray-900 rounded-2xl p-4 shadow-lg dark:shadow-[0_4px_24px_rgba(0,0,0,0.4)] w-full mt-4 lg:mt-auto lg:max-w-xs border border-transparent dark:border-gray-800"
>
  <div class="flex items-center space-x-3">
    <div class="w-10 h-10 bg-gray-200 rounded-full flex-shrink-0">
      <Image
        src="/profile.jpeg"
        alt="Abhishek Ojha"
        width={80}
        height={80}
        loading="eager"
        class="w-full h-full! object-cover rounded-full"
      />
    </div>
    <div>
      <p class="font-semibold text-gray-800 dark:text-gray-200">Abhishekh Ojha</p>
      <p class="text-sm text-gray-500 dark:text-gray-400 truncate max-w-[180px]">
        abhishekhojha45@gmail.com
      </p>
    </div>
  </div>
  <div class="mt-4 border-t border-gray-200 dark:border-gray-700 pt-4">
    <a
      href="mailto:abhishekhojha45@gmail.com"
      class="flex items-center justify-center w-full font-medium py-2 px-8 rounded-lg text-[var(--brand-dark)] dark:text-gray-100 bg-[var(--brand-light-trans)] dark:bg-white/10 shadow-md shadow-black/10 backdrop-blur-xs transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--brand-dark)]"
    >
      Send an Email
    </a>
  </div>
</div>
